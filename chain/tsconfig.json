{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalResolver": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "vitest.config.ts",
    "vitest.setup.ts"
  ]
}